<AnchorPane fx:id="pane" prefHeight="700.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hms.controller.LoginController">
   <children>
      <ImageView fitHeight="705.0" fitWidth="1250.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Login.jpg" />
         </image>
      </ImageView>
      <AnchorPane layoutX="729.0" layoutY="126.0" prefHeight="417.0" prefWidth="402.0" style="-fx-background-color: ffffff; -fx-background-radius: 20;">
         <effect>
            <DropShadow color="#00000080" height="14.78" offsetX="8.0" offsetY="8.0" radius="12.525" width="37.32" />
         </effect>
         <children>
            <JFXButton buttonType="RAISED" layoutX="30.0" layoutY="331.0" onAction="#loginClickOnAction" prefHeight="50.0" prefWidth="340.0" ripplerFill="#0d009a" style="-fx-background-color: #003E9E; -fx-background-radius: 12;" text="Login" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <JFXPasswordField fx:id="txtPassword" focusColor="#003e9e" layoutX="34.0" layoutY="219.0" onKeyTyped="#passwordFieldKeyTyped" prefHeight="50.0" prefWidth="333.0" style="-fx-border-radius: 20; -fx-text-fill: #003E9E;" unFocusColor="#003e9e">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </JFXPasswordField>
            <JFXTextField fx:id="txtUserName" focusColor="#003e9e" layoutX="35.0" layoutY="108.0" prefHeight="50.0" prefWidth="333.0" style="-fx-border-radius: 20; -fx-text-fill: #003E9E;" unFocusColor="#003e9e">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font>
            </JFXTextField>
            <Label layoutX="37.0" layoutY="84.0" text="User Name" textFill="#003e9e">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="38.0" layoutY="196.0" text="Password" textFill="#003e9e">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="259.0" layoutY="456.0" textFill="#003e9e">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Hyperlink layoutX="266.0" layoutY="394.0" onAction="#forgotClickOnAction" text="Forgot Password ?" underline="true" />
            <Label fx:id="shownPassword" layoutX="34.0" layoutY="282.0" prefHeight="38.0" prefWidth="333.0" text="Shown Password" textFill="#0d009a">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ToggleButton fx:id="toggleButton" layoutX="310.0" layoutY="231.0" mnemonicParsing="false" onAction="#toggleButton" prefHeight="38.0" prefWidth="57.0" style="-fx-background-color: #ffffff;" text="Show" textFill="#0d009a">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font size="13.0" />
               </font>
            </ToggleButton>
         </children>
      </AnchorPane>
      <ImageView fitHeight="125.0" fitWidth="271.0" layoutX="196.0" layoutY="128.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
